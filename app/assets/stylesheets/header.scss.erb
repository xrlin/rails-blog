@import "utils";

.header {
  padding-top: 25px;
  text-align: center;
}

nav {
  display: inline-block;
  a {
    color: inherit; // disable default link style
    position: relative;
    text-decoration: none;
    margin: 0px 5px 10px 5px;
    padding: 10px 20px 10px 20px;
    @include content-bg;

    &::before {
      @include blur-glass;
    }
  }
}
