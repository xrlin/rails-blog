@import "utils";

.header {
  padding-top: 35px;
  text-align: center;
}

nav {
  display: inline-block;
  a {
    color: inherit; // disable default link style
    position: relative;
    text-decoration: none;
    margin: 0px 5px 10px 5px;
    padding: 10px 20px 10px 20px;
    @include content-bg;

    &::before {
      @include blur-glass;
    }
    &.active, &:hover, &:focus{
      color: #129fea;
      // color: #ffffff;
      text-shadow: 0.01em 0.01em 2px #444;
    }
  }
}
