@import "utils";

article {
  position: relative;
  background: rgba(1, 1, 1, 0.8);
  padding: 1.5em;
  margin-top: 30px;
  background: hsla(0,0%,100%,.3);
  overflow: hidden;
  border-radius: .3em;
  box-shadow: 0 0 0 1px hsla(0,0%,100%,.25) inset,
              0 .5em 1em rgba(0, 0, 0, 0.6);
  text-shadow: 0 1px 1px hsla(0,0%,100%,.3);
  &::before {
    @include blur-glass;
  }

  .title {
    color: #2a2a2a;
    font-size: 24px;
    font-weight: normal;
    line-height: 36px;
    margin: 0 0 20px 0;
  }

  hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #999;
    margin-top: 20px;
    margin-bottom: .5em;
  }

  footer {
    color: #999;
  }
}
