    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="pure-g main">
      <%= render 'layouts/header' %>
      <%= yield %>
      <%= render  'layouts/footer' %>
    </div>
  </body>
</html>
